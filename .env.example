# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration (Required)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Development settings
NODE_ENV=development
PORT=5000

# Storage Configuration
VITE_USE_LOCALSTORAGE=true

# Example DATABASE_URL formats:
# Neon Database: DATABASE_URL="postgresql://user:pass@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require"
# Local PostgreSQL: DATABASE_URL="postgresql://postgres:password@localhost:5432/alarm_db"
# Supabase: DATABASE_URL="postgresql://postgres:password@db.xxx.supabase.co:5432/postgres"